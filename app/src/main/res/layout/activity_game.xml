<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.GameActivity">

    <TextView
        android:id="@+id/activity_game_question_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"


        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"

        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/lightBlue"


        android:text="Question ?"

        />

    <Button
        android:id="@+id/activity_game_response_one_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"


        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"

        android:background="@drawable/custom_button"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:hint="Reponse 1"

        />

    <Button
        android:id="@+id/activity_game_response_two_btn"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginVertical="5dp"


        android:background="@drawable/custom_button"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:hint="Reponse 2"

        />

    <Button
        android:id="@+id/activity_game_response_three_btn"


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"

        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"


        android:background="@drawable/custom_button"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:hint="Reponse 3"

        />

    <Button
        android:id="@+id/activity_game_response_four_btn"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"

        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"


        android:background="@drawable/custom_button"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:hint="Reponse 4"

        />




</LinearLayout>